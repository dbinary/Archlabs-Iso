[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30

[global/wm]
margin-top = 5
margin-bottom = 5


[colors]
background = #131724
background-alt = #444
foreground = #8FA1B3
foreground-alt = #ffffff
primary = #B6C2E7
graphite = #2e3440
red = #6BA4E7
black = #000000
green = #6B98E7
pink = #9181E7
orange = #FEBE8E
blue = #AFC5F9
purple = #D7AFF9
dontknow = #6B8EE7
yellow = #F9F1AF

[bar/bar1]
; Use  xrandr -q | grep " connected" | cut -d ' ' -f1
; for a list of connected monitors
monitor =
width = 100%
height = 28
radius = 0.0
fixed-center = true

background = ${colors.graphite}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-bottom-size = 2
border-color = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Nerd Font:size=10:antialias=true;1
font-1 = icomoon:size=11;1
font-2 = MaterialIcons-Regular:size=12:antialias=false;3
font-3 = Ubuntu Nerd Font:size=13;2

modules-left = workspaces
modules-center = window_count volume
modules-right = menu pkg battery memory cpu temperature network clock

tray-position = off
tray-padding = 2




;;;;;;;;;;;;;;;;;;;
;; Modules
;;;;;;;;;;;;;;;;;;;


[module/network]
type = custom/script
label-background = #2E3440
exec = $HOME/.config/polybar/scripts/network.sh
click-left = python /usr/bin/networkmanager_dmenu
click-right = python /usr/bin/networkmanager_dmenu
label-padding = 1
interval = 1
tail = true


[module/window_count]
type = custom/script
interval = 2
label = "%{A1:skippy-xd --activate-window-picker:}   %output%  %{A}        "
exec = echo "$(($(wmctrl -l -i | wc -l)-1))"
format = <label>
format-prefix = "   "
format-padding = 0


;;;;;;;;;
;; CPU ;;
;;;;;;;;;
[module/cpu]
type = internal/cpu
interval = 3
format-prefix = "    "
label = %{A1:termite --exec=htop & disown:}%percentage%%%{A}


;;;;;;;;;
;; MEM ;;
;;;;;;;;;
[module/memory]
type = internal/memory
interval = 3
format = <label>
format-prefix = "    "
label = %{A1:termite --exec=htop & disown:}%percentage_used%%%{A}


;;;;;;;;;
;; PKG ;;
;;;;;;;;;
[module/pkg]
type = custom/script
exec = $HOME/.config/polybar/scripts/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
click-left = termite --geometry=750x550 --exec=pacli &
click-right = termite --geometry=750x550 --exec=pacli &
label-padding = 2
interval = 1500
tail = true


;;;;;;;;;;;
;; Clock ;;
;;;;;;;;;;;
[module/clock]
type = internal/date
format = <label>
label-padding-right = 4
format-prefix = 
format-foreground = ${colors.foreground}
interval = 2
time = %R
label = %{A1:gsimplecal & disown:} %{A3:gsimplecal & disown:} %time% %{A}%{A}


;;;;;;;;;;;;;;;;;
;; TEMPERATURE ;;
;;;;;;;;;;;;;;;;;
[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 0
warn-temperature = 70

format = <ramp> <label>
label = "  %temperature%  "

ramp-0 = " "
ramp-0-foreground = ${colors.pink}
ramp-1 = " "
ramp-1-foreground = ${colors.pink}
ramp-2 = " "
ramp-2-foreground = ${colors.pink}
ramp-3 = " "
ramp-3-foreground = ${colors.red}

format-warn = <label-warn>
label-warn = "  %temperature%  "
label-warn-foreground = ${colors.red}


;;;;;;;;;;;;;;;
;; KEYBOARD ;;
;;;;;;;;;;;;;;;
